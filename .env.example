# Database Configuration
POSTGRES_DB=notionclone
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
MINIO_BUCKET_NAME=notionclone-uploads
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Backend Configuration
ASPNETCORE_ENVIRONMENT=Production
BACKEND_PORT=8080

# JWT Configuration (REQUIRED - Generate a secure random string)
JWT_SECRET_KEY=your_very_long_and_secure_secret_key_at_least_32_characters
JWT_ISSUER=NotionClone
JWT_AUDIENCE=NotionCloneUsers
JWT_EXPIRY_MINUTES=60

# CORS Configuration (update with your Coolify domain)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Frontend Configuration
FRONTEND_PORT=3000
